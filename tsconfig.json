{
    "compilerOptions": {
        "rootDir": "./src",
        "outDir": "./dist",

        "module": "CommonJS",
        "moduleResolution": "Node",
        "target": "ES2022",
        "lib": ["ES2022"],
        "types": ["node"],
        "esModuleInterop": true,
        "resolveJsonModule": true,

        "sourceMap": true,
        "declaration": true,
        "declarationMap": true,

        "noUncheckedIndexedAccess": true,
        "exactOptionalPropertyTypes": true,
        "strict": true,
        "skipLibCheck": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["dist", "node_modules", "test"]
}
